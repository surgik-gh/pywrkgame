# Include documentation
include README.md
include LICENSE
include ANDROID_BUILD.md
recursive-include docs *.md

# Include C++ headers
recursive-include include *.h *.hpp

# Include C++ sources
recursive-include src *.cpp *.c

# Include Python bindings
recursive-include python *.cpp *.py

# Include CMake files
include CMakeLists.txt
recursive-include src CMakeLists.txt
recursive-include python CMakeLists.txt

# Include examples
recursive-include examples *.py *.md

# Include test files
recursive-include tests *.py *.cpp *.h
include tests/CMakeLists.txt

# Include build configuration
include buildozer.spec
include setup.py

# Exclude build artifacts
global-exclude *.pyc
global-exclude *.pyo
global-exclude __pycache__
global-exclude *.so
global-exclude *.dll
global-exclude *.dylib
global-exclude .DS_Store
global-exclude *.o
global-exclude *.obj
